@model OnlineStore.Models.ViewModels.ProductIndexViewModel

<h2>@Model.Product.Name</h2>

<br><img src="@Model.Product.ImageUrl" alt="@Model.Product.Name" title="@Model.Product.Name" height="192" width="192" />
<br>@Model.Product.Description
<h2><span class="badge badge-default badge-primary" style="float:right">
        @Model.Product.Price.ToString("c")
    </span>
    <span class="badge badge-
                    @(Model.Product.Quantity == 0 ? "badge-danger" : "")
                    @((Model.Product.Quantity > 0 && Model.Product.Quantity <= 10) ? "badge-warning" : "")
                    @(Model.Product.Quantity > 10 ? "badge-success" : "")
                    badge-primary" style="float:right">
        @(Model.Product.Quantity == 0 ? "" : @Model.Product.Quantity.ToString())
        @(Model.Product.Quantity == 0 ? "not available" : "available")
    </span>
    </h2>
