@model OnlineStore.Models.Order
@*<link rel="stylesheet" asp-href-include="css/style.css" />*@
<link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

@{Model.UserID = ViewBag.UserID;}

@Model.UserID
<h2>Check out</h2>
<p>Enter shipping details</p>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" method="post">
    <h3>Deliver to</h3>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" value=@ViewBag.Name />
    </div>
    <h3>Address</h3>
    <div class="form-group">
        <label asp-for="Line1"></label>
        <input asp-for="Line1" class="form-control" value=@ViewBag.Line1 />
    </div>
    <div class="form-group">
        <label asp-for="Line2"></label>
        <input asp-for="Line2" class="form-control" value=@ViewBag.Line2 />
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" value=@ViewBag.City />
    </div>
    @*<div class="form-group">
            <label>Zip:</label>
            <input asp-for="Zip"
                   class="form-control" />
        </div>*@

    <div class="form-group">
        <label asp-for="Zip"></label>
        <input asp-for="Zip" class="form-control" value=@ViewBag.Zip />
    </div>

    <h3>Payment details</h3>

    @*<div class="form-group">
        <label asp-for="CreditCardOwner"></label>
        <input asp-for="CreditCardOwner" class="form-control" value=@ViewBag.CreditCardOwner/>
    </div>
    <div class="form-group">
        <label asp-for="CreditCardNumber"></label>
        <input asp-for="CreditCardNumber" class="form-control" value=@ViewBag.CreditCardNumber />
    </div>
    <div class="form-group">
        <label asp-for="ExpirationDate"></label>
        <input asp-for="ExpirationDate" class="form-control" value=@ViewBag.ExpirationDate />
    </div>*@


    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>
</form>