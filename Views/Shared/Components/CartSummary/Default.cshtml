@model OnlineStore.Models.Cart

<div class="">
    @if (Model.Lines.Count() > 0)
    {
        <h5 class="navbar-text">
            <b>Your cart:</b>
            @Model.Lines.Sum(x => x.Quantity) item(s)
            @Model.ComputeTotalValue().ToString("c")
        </h5>

        if (ViewContext.HttpContext.Request.Path != "/Cart/Index")
        {
            <a class="btn btn-sm btn-secondary navbar-btn"
               asp-controller="Cart" asp-action="Index"
               asp-route-returnurl="@OnlineStore.Infrastructure.UrlExtensions.PathAndQuery(ViewContext.HttpContext.Request)">
                checkout
            </a>
        }
    }

</div>