@model IEnumerable<OnlineStore.Models.Order>

@if (ViewBag.isAdmin.ToString() == "1")
{
    Layout = "_AdminLayout";
}

@{
    ViewBag.Title = "Orders";
}

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr><th>Name</th><th>Zip</th><th colspan="2">Details</th><th></th></tr>
        @foreach (OnlineStore.Models.Order o in Model)
        {
            <tr>
                <td>@o.Name</td>
                <td>@o.Zip</td>
                <td>Shipped: @o.Shipped</td>
                <th>Product</th>
                <th>Quantity</th>
            </tr>
            @foreach (OnlineStore.Models.CartLine line in o.Lines)
            {
                <tr>
                    <td colspan="2"></td>
                    <td>@line.Product.Name</td>
                    <td>@line.Quantity</td>
                </tr>
            }
        }
    </table>
}
else
{
    <div class="text-center">no orders</div>
}